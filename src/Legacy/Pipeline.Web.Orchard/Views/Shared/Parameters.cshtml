@using Pipeline.Web.Orchard.Models
@model ReportViewModel
<div id="id-parameters" class="row" style="margin-bottom: 4px; margin-right:200px;">
    <div class="col-md-12">
        @if (Model.Part.EnableInlineParameters) {
            foreach (var parameter in Model.ActiveParameters.Where(p => p.Prompt)) {
                if (Model.TopParameters.Contains(parameter.Name)) {
                    @Html.Partial("Shared/ParameterWithLabel", new ParameterModel { Maps = Model.Process.Maps, Parameter = parameter })
                }
            }
        } else {
            foreach (var parameter in Model.ActiveParameters.Where(p => p.Prompt)) {
                @Html.Partial("Shared/ParameterWithLabel", new ParameterModel { Maps = Model.Process.Maps, Parameter = parameter })
            }
        }
    </div>
</div>
